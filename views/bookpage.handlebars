<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Page - BookHive</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <!-- BookHive Title -->
        <header class="text-center my-5">
            <h1>BookHive</h1>
        </header>

        <!-- Book Details Section -->
        <section class="book-details my-5">
            <div class="row">
                <!-- Book Title and Rating -->
                <div class="col-md-8">
                    <h2>{{book.title}}</h2>
                    <p class="text-muted">
                        Rating: <strong>{{book.rating}}</strong>/5 ({{book.numRatings}} ratings)
                    </p>
                </div>
            </div>

            <!-- Book Description, Author, Genre -->
            <div class="row my-3">
                <div class="col-md-8">
                    <h5>Description:</h5>
                    <p>{{book.description}}</p>
                    
                    <h5>Author:</h5>
                    <p>{{book.author}}</p>
                    
                    <h5>Genre:</h5>
                    <p>{{book.genre}}</p>
                </div>
            </div>
        </section>

        <!-- User Reviews Section -->
        <section class="user-reviews my-5">
            <h3>User Reviews</h3>
            <div class="list-group">
                {{#each reviews}}
                    <div class="list-group-item">
                        <h5>{{this.user}}</h5>
                        <p>{{this.review}}</p>
                        <small class="text-muted">Rating: {{this.rating}}/5</small>
                    </div>
                {{/each}}
            </div>
        </section>
    </div>
</body>
</html>

