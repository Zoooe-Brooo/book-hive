<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Page</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <!-- Include FontAwesome for star icons if needed -->
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <!-- BookHive Title -->
      {{!-- <header class="text-center my-5">
        <h1>BookHive</h1>
      </header> --}}

      <!-- Book Details Section -->
      <section class="book-details my-5">
        <div class="row">
          <!-- Book Title and Rating -->
          <div class="col-md-8">
            <h2>{{book.title}}</h2>
            <p class="text-muted">
              Rating:
              <strong>{{book.rating}}</strong>/5 ({{book.numRatings}}
              ratings)
            </p>
          </div>
        </div>

        <!-- Book Description, Author, Genre -->
      <section class="book-info">
  <div class="row my-3">
    <div class="col-md-8">
      <div class="book-details">
        <h5>Description:</h5>
        <p>{{book.description}}</p>

        <h5>Author:</h5>
        <p>{{book.author}}</p>

        <h5>Genre:</h5>
        <p>{{book.genre}}</p>
      </div>
    </div>
  </div>
</section>


      <!-- User Reviews Section -->
      <section class="user-reviews my-5">
        <h3>REVIEWS</h3>
        <div class="row">
          {{#each reviews}}
            <div class="col-md-4 mb-3">
              <h5>{{this.user}}</h5>
              <p>{{this.review}}</p>
              <small class="text-muted">Rating: {{this.rating}}/5</small>

              <!-- Add star elements if you want to display sentiment analysis visually -->
              <div class="review-stars">
                <i class="star fas fa-star"></i>
                <i class="star fas fa-star"></i>
                <i class="star fas fa-star"></i>
                <i class="star fas fa-star"></i>
                <i class="star fas fa-star"></i>
              </div>
            </div>
          {{/each}}
        </div>
      </section>

      <!-- Add Review Form -->
      <section class="add-review my-5">
        <h3>ADD REVIEW</h3>
        <form id="review-form">
          <div class="mb-3">
            {{!-- <label for="review-input" class="form-label">Your Review</label> --}}
            <textarea
              class="form-control"
              id="review-input"
              rows="3"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <ul id="review-list" class="mt-3"></ul>
        <!-- Reviews will be appended here -->
      </section>
    </div>

    <!-- Link the bookpage.js script -->
    <script src="/js/bookpage.js"></script>
  </body>
</html>