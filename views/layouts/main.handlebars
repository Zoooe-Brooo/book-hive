<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book-Hive</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/jass.css">
</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="book">BOOK</span><span class="hive">HIVE</span>
      </a>


      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        </ul>
        </div>

        <!-- Logout button -->
        <div class="d-flex align-items-center"></div>
        <a class="btn btn-secondary me-2" href="/">Home</a>

         <!-- Profile button -->
       <div class="d-flex align-items-center">
        <a class="btn btn-secondary me-2" href="/profile">Profile</a>

            {{#if loggedIn}}
                <a class="btn btn-secondary" href="/logout" id="logout-link">Logout</a>
            {{else}}
                <a class="btn btn-secondary" href="/login" id="login-link">Login</a>
            {{/if}}
      </div>
    </div>
  </nav>


  <!-- Main Content -->
  <main class="container container-fluid mt-5">
    {{{ body }}}
 </main> 

  <!-- Footer -->
  <footer>
    <!-- Footer content -->
  </footer>

  <!-- Load TensorFlow.js and your custom script at the end -->
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity"></script>
  <script src="/js/tensorflow.js"></script>
</body>

</html>

