<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book-Hive</title>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />

    <!-- FontAwesome CSS for star icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/jass.css" />
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <span class="book">BOOK</span><span class="hive">HIVE</span>
        </a>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- Other navigation links can go here -->
          </ul>
        </div>

        <!-- Logout/Profile/Login buttons -->
        <div class="d-flex align-items-center">
          <a class="btn btn-primary me-2" href="/" id="home-link">Home</a>
          <a class="btn btn-primary me-2" href="/profile">Profile</a>

          {{#if logged_in}}
            <!-- Show logout button if logged in -->
            <a class="btn btn-primary" href="/" id="logout-link">Logout</a>
          {{else}}
            <!-- Show login button if not logged in -->
            <a class="btn btn-primary" href="/login" id="login-link">Login</a>
          {{/if}}
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid mt-5">
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3">
      <div class="container">
        <span class="text-muted">Â© 2024 BookHive</span>
      </div>
    </footer>

    <!-- Conditionally load TensorFlow and Toxicity model for pages that require it -->
{{#if tensorflowRequired}}
  <!-- TensorFlow.js Script for sentiment analysis -->
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity"></script>
  <script src="/js/tensorflow.js" defer></script>  <!-- Your custom TensorFlow handling script -->
{{/if}}

    <!-- Conditionally load bookpage.js on book-related pages -->
    {{#if bookpage}}
      <script src="/js/bookpage.js"></script>
    {{/if}}

    <!-- Main JavaScript for the app -->
    <script src="/js/main.js"></script>

    <!-- Bootstrap JS (Optional) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
