<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page - BookHive</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <!-- Title Section -->
      <header class="text-center my-5">
        <h1>BookHive</h1>
      </header>

      <!-- User Info Section -->
      <section class="user-info text-center my-4">
        <img
          src="{{user.avatar}}"
          alt="User Avatar"
          class="rounded-circle"
          style="width: 150px; height: 150px;"
        />
        <h2 class="my-3">{{user.name}}</h2>
        <p class="text-muted">Member Since: {{user.memberSince}}</p>
      </section>

      <!-- Books Section -->
      <section class="books-section my-5">
        <div class="row">
          <!-- Books I Have Read -->
          <div class="col-md-4">
            <h3>Books I Have Read</h3>
            <ul class="list-group">
              {{#each user.booksRead}}
                <li class="list-group-item">{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>

<script src="/js/userpage.js"></script>