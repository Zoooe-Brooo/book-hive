<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page - BookHive</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <!-- Title Section -->
      <header class="text-center my-5">
        <h1>BookHive</h1>
      </header>

      <!-- User Info Section -->
      <section class="user-info text-center my-4">
        <img
          src="{{user.avatar}}"
          alt="User Avatar"
          class="rounded-circle"
          style="width: 150px; height: 150px;"
        />
        <h2 class="my-3">{{user.name}}</h2>
        <p class="text-muted">Member Since: {{user.memberSince}}</p>
      </section>

      <!-- Profile Update Section -->
      <section class="update-profile-section my-5">
        <h3 class="text-center">Update Profile</h3>
        <form id="update-profile-form" class="mx-auto" style="max-width: 500px;">
          <div class="mb-3">
            <label for="name-input" class="form-label">Name</label>
            <input type="text" id="name-input" class="form-control" value="{{user.name}}" />
          </div>
          <div class="mb-3">
            <label for="email-input" class="form-label">Email</label>
            <input type="email" id="email-input" class="form-control" value="{{user.email}}" />
          </div>
          <button type="submit" class="btn btn-primary w-100">Update Profile</button>
        </form>
      </section>

      <!-- Books Section -->
      <section class="books-section my-5">
        <div class="row">
          <!-- Books I Have Read -->
          <div class="col-md-4">
            <h3>Books I Have Read</h3>
            <ul class="list-group">
              {{#each user.booksRead}}
                <li class="list-group-item">{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </section>

      <!-- Account Deletion Section -->
      <section class="delete-account-section text-center my-5">
        <button id="delete-account-btn" class="btn btn-danger">Delete Account</button>
      </section>
    </div>

    <script src="/js/userpage.js"></script>
  </body>
</html>
