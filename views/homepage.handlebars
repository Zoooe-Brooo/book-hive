<div class="list-group book-list">
  {{#each books as |book|}}
  <div class="book-item">
    <a href="/book/{{book.id}}" class="list-group-item">
      <div class="row">
        <div class="col-md-4">
          <img
            src="{{book.cover_image}}"
            alt="Cover of {{book.title}}"
          />
        </div>
        <div class="col-md-8 book-intro">
          <p>Genre: {{book.genre}}</p>
          <div>
            <h2 >{{book.title}}</h2>
          </div>
          <p>Author: {{book.author}}</p>
          <p style="margin-top:10px;">{{book.description}}</p>
        </div>
      </div>
    </a>
    </div>
  {{/each}}
</div>

<script src="/js/homepage.js"></script>