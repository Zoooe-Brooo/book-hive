<div class="list-group">
  {{#each books as |book|}}
    <a href="/book/{{book.id}}" class="list-group-item">
      <div class="row align-center mb-5">
        <div class="col-md-6">
          <h2>{{book.title}}</h2>
          <img
            src="{{book.cover_image}}"
            alt="Cover of {{book.title}}"
            class="img-fluid mb-3 book-cover"
          />
          <p>{{book.genre}}</p>
        </div>
        <div class="col-md-6">
          <h3>{{book.author}}</h3>
          <p>{{book.description}}</p>
        </div>
      </div>
    </a>
  {{/each}}
</div>
{{/each}}

<link rel="stylesheet" href="/css/jass.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <!-- Navbar brand/title -->
    <a class="navbar-brand" href="#">{{title}}</a>


<section class="search-bar my-4"></section>
  <form class="d-flex justify-content-center" action="/search" method="GET">
    <input class="form-control w-50 me-2" type="search" placeholder="Search for books..." aria-label="Search" name="query">
    <button class="btn-search" type="submit">Search</button>
  </form>
</section>

<script src="/js/homepage.js"></script>