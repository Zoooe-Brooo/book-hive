<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - BookHive</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <!-- BookHive Title -->
        <header class="text-center my-5">
            <h1>BookHive</h1>
            <h2>All Users</h2>
        </header>

        <!-- Users List -->
        <section class="users-list my-5">
            <div class="row">
                {{#each users}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{this.avatar}}" alt="{{this.name}}'s Avatar" class="card-img-top" style="height: 150px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">Member Since: {{this.memberSince}}</p>
                            <a href="/users/{{this.id}}" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</body>
</html>
